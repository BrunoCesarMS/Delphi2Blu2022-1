unit Luz;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  TForm1 = class(TForm)
    Label1: TLabel;
    Button1: TButton;
    Label2: TLabel;
    Tresidencia: TEdit;
    Tcomercio: TEdit;
    Tindustria: TEdit;
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
var
  Tpcliente: Integer;
  valorRes : Double;
  valorCo  : Double;
  valorInd : Double;
  consumo  : Double;

begin
  Tpcliente := strtoint(inputbox('Informe ', ' Informe o tipo de residência: 1 - Residência, 2 - Comércio, 3 - Indústria ',''));

  consumo   := StrToFloat(inputbox('informe ', 'Informe o consumo de kw/h: ',''));

  begin
    if Tpcliente = 1 then
      valorRes := consumo*0.60;
      Tresidencia.text := ('Valor da conta da residência é de: ' +FloatToStr(valorRes));
  end;


  begin
    if Tpcliente = 2 then
      valorCo := consumo*0.48;
      tcomercio.text :=('valor da conta do comércio é de: ' +FloatToStr(valorCo));
  end;

  begin
    if Tpcliente = 3 then
      valorInd := consumo*1.29;
      tindustria.text := ('valor da conta da indústria é de: ' +FloatToStr(valorInd));
  end;
end;



end.
